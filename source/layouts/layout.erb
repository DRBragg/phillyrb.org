<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
    <script type="text/javascript" src="//use.typekit.net/xfb2ejw.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body class="<%= page_classes %>">
    <header class="main">
      <nav>
        <h1 class="logo">
          <a href="#">Philly.rb</a>
        </h1>

        <ul class="social-links">
          <li><a href="http://twitter.com/phillyrb">Twitter</a></li>
          <li><a href="https://groups.google.com/forum/#!forum/phillyrb">Mailing list</a></li>
        </ul>

        <ul class="engagement">
          <li><a href="#">Submit talk</a></li>
          <li><a href="#">RSVP on Meetup</a></li>
        </ul>
      </nav>
    </header>

    <section class="main">
      <%= yield %>
    </section>

    <footer class="main">
      <p>Organized by <a href="http://twitter.com/jearvon">@jearvon</a></p>
      <p>Designed by <a href="http://twitter.com/thoughtbot">@thoughtbot</a></p>
      <h1>Philly.rb</h1>
    </footer>
  </body>
</html>
